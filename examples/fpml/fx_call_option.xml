<?xml version="1.0" encoding="UTF-8"?>
<!--
    FpML 5.x FX Option Example

    Product: EUR/USD Call Option
    Structure: Buy EUR 1,000,000 / Sell USD 1,100,000
    Strike: 1.10
    Expiration: 1 year from trade date
-->
<dataDocument xmlns="http://www.fpml.org/FpML-5/confirmation"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.fpml.org/FpML-5/confirmation http://www.fpml.org/spec/fpml-5-0-0-confirmation.xsd"
              fpmlVersion="5-0">

    <!-- Party Definitions -->
    <party id="bank">
        <partyName>Global Bank Corp</partyName>
    </party>
    <party id="client">
        <partyName>Corporate Client Ltd</partyName>
    </party>

    <!-- Trade -->
    <trade>
        <tradeHeader>
            <tradeDate>2024-01-15</tradeDate>
        </tradeHeader>

        <fxOption>
            <buyerPartyReference href="client"/>
            <sellerPartyReference href="bank"/>

            <!-- Put Currency (what you pay) -->
            <putCurrencyAmount>
                <currency>USD</currency>
                <amount>1100000.00</amount>
            </putCurrencyAmount>

            <!-- Call Currency (what you receive) -->
            <callCurrencyAmount>
                <currency>EUR</currency>
                <amount>1000000.00</amount>
            </callCurrencyAmount>

            <!-- Strike Rate -->
            <strike>
                <rate>1.10</rate>
                <strikeQuoteBasis>CallCurrencyPerPutCurrency</strikeQuoteBasis>
            </strike>

            <!-- Spot Rate at Trade Inception -->
            <spotRate>
                <quotedCurrencyPair>
                    <currency1>EUR</currency1>
                    <currency2>USD</currency2>
                    <quoteBasis>Currency2PerCurrency1</quoteBasis>
                </quotedCurrencyPair>
                <spotRate>1.08</spotRate>
            </spotRate>

            <!-- European Exercise -->
            <europeanExercise>
                <expiryDate>2025-01-15</expiryDate>
                <expiryTime>10:00:00</expiryTime>
                <cutName>NewYork</cutName>
                <latestValueDate>2025-01-17</latestValueDate>
            </europeanExercise>
        </fxOption>
    </trade>
</dataDocument>
